@model Portfolio.Domain.ViewModels.Account.LoginViewModel;
@{
    Layout = "_Layout-main";
}
<head>
    <link rel="stylesheet" href="~/css/Registration.css" />
</head>
<main>
    <div class="register-form-container">
        <form autocomplete="off" method="post" asp-controller="Account" asp-action="Login">
            <h2 class="form-title">Вход</h2>
            <div class="validation" asp-validation-summary="All"></div>
            <div class="form-fields">
                <div class="form-field">
                    <input asp-for="Email" type="text" placeholder="Почта" />
                </div>
                <div class="form-field">
                    <input autocomplete="new-password" asp-for="Password" type="password" placeholder="Пароль" />
                </div>
            </div>
            <div class="form-buttons">
                <button class="button" type="submit">Войти</button>
                <div class="divider">У вас нет аккаунта?</div>
                <a asp-controller="Account" asp-action="Register" class="button button-sign">Регистрация</a>
            </div>
        </form>
    </div>
</main>

