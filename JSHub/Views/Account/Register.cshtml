@model Portfolio.Domain.ViewModels.Account.RegisterViewModel;
@{
    Layout = "_Layout-main";
}
<head>
    <link rel="stylesheet" href="~/css/Registration.css" />
</head>
<main>
    <div class="register-form-container">
        <form autocomplete="off" asp-controller="Account" asp-action="Register">
            <h1 class="form-title">
                Регистрация
            </h1>
            <div class="validation" asp-validation-summary="All"></div>
            <div class="form-fields">
                <div class="form-field">
                    <input asp-for="Email" type="text" placeholder="Почта" />
                </div>
                <div class="form-field">
                    <input autocomplete="new-password" asp-for="Password" type="password" placeholder="Придумайте пароль" />
                </div>
            </div>
            <div class="form-buttons">
                <button class="button" type="submit">Регистрация</button>
                <div class="divider">Уже есть аккаунт?</div>
                <a asp-controller="Account" asp-action="Login" class="button button-sign">Вход</a>
            </div>
        </form>
    </div>
</main>

